FROM node:20 AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

# Copiamos el cÃ³digo fuente
COPY . .

# --- ğŸ‘‡ Aseguramos que las variables se inyecten correctamente
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL
RUN echo "API_URL=$VITE_API_URL"

# ğŸ”¨ Ejecutamos el build con las variables disponibles
RUN echo "ğŸ”§ Build usando API_URL=$VITE_API_URL" && npm run build

# ==========================
# ğŸŒ Etapa 2: Servir con Nginx
# ==========================
FROM nginx:stable-alpine

COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
